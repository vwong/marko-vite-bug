{
  "include": ["src/**/*", "vite.config.ts", ".marko-run/*"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": ["dom", "dom.iterable", "ES2021.String", "ES2023.Array"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  }
}
